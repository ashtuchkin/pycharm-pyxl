<idea-plugin version="2">
    <id>com.christofferklang.pyxl</id>
    <name>Pyxl Extensions</name>
    <version>0.1</version>
    <vendor email="christoffer.klang@gmail.com">Christoffer Klang</vendor>

    <description><![CDATA[
      Provides extensions to PyCharm for working with <a href="https://github.com/dropbox/pyxl">Pyxl</a> files.
    ]]></description>

    <change-notes><![CDATA[
      Initial version with Goto Pyxl definition.
    ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <lang.parserDefinition
                language="Python"
                order="first, before PythonParserDefinition"
                implementationClass="com.christofferklang.pyxl.PyxlParserDefinition"
                />

        <lang.syntaxHighlighterFactory
                key="Python"
                order="first"
                implementationClass="com.christofferklang.pyxl.PyxlHighlighterFactory"
                />
    </extensions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <depends>com.intellij.modules.python</depends>

    <actions>
        <action id="PyxlTagDefinition"
                class="com.christofferklang.pyxl.action.PyxlTagDefinitionAction"
                text="Goto Pyxl definition"
                description="Jumps to the Pyxl definition of the tag under the cursor">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut first-keystroke="ctrl shift b" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>
